{
    "name": "MyArx",
    "version": "1.4",
    "description": "Meaningful titles for tabs and PDF downloads!",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*://arxiv.org/abs/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }, {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": ["*://arxiv.org/abs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }],
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        },
        "default_title": "Open Abstract / PDF"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "bookmarks",
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self' https://arxiv.org;",
    "web_accessible_resources": [
        "pdfviewer.html"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2
}
